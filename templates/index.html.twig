{% extends 'base.html.twig' %}

{% block title %} Bilibili Cover Downloader {% endblock %}

{% block stylesheets %}
    <style>
        #toHotList {
            display: inline-block;
            padding: 10px;
            border: 1px darkgray solid;
        }
    </style>
{% endblock %}

{% block body %}
    <div id="toHotList">
        To hot list
    </div>
    {{ form_start(form) }}
    {{ form_widget(form) }}
    {{ form_end(form) }}
{% endblock %}

{% block javascripts %}
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.0/jquery.min.js"></script>
    <script>
        $("#toHotList").click(function() {
            window.location.replace("/hot_list");
        })
    </script>
{% endblock %}
